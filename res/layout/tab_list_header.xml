<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/widget_bar_bg_p"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|center_vertical" >

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center|center_horizontal|center_vertical" >

            <ImageButton
                android:id="@+id/imageButton_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000" 
                android:src="@drawable/widget_icon_download" />
                <!-- 设置背景透明 -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.82" >
            
	        <Spinner
	            android:id="@+id/Spinnered"
	            android:layout_width="fill_parent"
	            android:layout_height="match_parent" />
	        <!-- 
	            android:background="#00000000" -->
  
        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center|center_horizontal|center_vertical" >

            <ImageButton
                android:id="@+id/imageButton_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000" 
                android:src="@drawable/widget_icon_refresh" />
                <!-- 设置背景透明 -->

        </LinearLayout>
    </LinearLayout>

</LinearLayout>