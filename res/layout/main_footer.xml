<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_linearlayout_footer"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_bar_bg_n"
    android:gravity="center_vertical"
    android:orientation="horizontal" >


    <RadioButton
        android:id="@+id/main_footbar_chart"
        style="@style/main_footbar_radio"
        android:drawableTop="@drawable/widget_bar_chart" />

    <ImageView
        style="@style/main_footbar_cutline"
        android:src="@drawable/widget_bar_cut_off" />
    
    <RadioButton
        android:id="@+id/main_footbar_list"
        style="@style/main_footbar_radio"
        android:drawableTop="@drawable/widget_bar_list" />

    <ImageView
        style="@style/main_footbar_cutline"
        android:src="@drawable/widget_bar_cut_off" />

    <RadioButton
        android:id="@+id/main_footbar_add"
        style="@style/main_footbar_radio"
        android:drawableTop="@drawable/widget_bar_add" />

    <ImageView
        style="@style/main_footbar_cutline"
        android:src="@drawable/widget_bar_cut_off" />

    <RadioButton
        android:id="@+id/main_footbar_user"
        style="@style/main_footbar_radio"
        android:drawableTop="@drawable/widget_bar_user" />

    <ImageView
        style="@style/main_footbar_cutline"
        android:src="@drawable/widget_bar_cut_off" />

    <RadioButton
        android:id="@+id/main_footbar_about"
        style="@style/main_footbar_radio"
        android:drawableTop="@drawable/widget_bar_about" />

</LinearLayout>