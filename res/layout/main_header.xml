<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/title_bar"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <RelativeLayout 
        android:id="@+id/rl_layout"
  			android:layout_width="fill_parent"
  			android:layout_height="45dp"
  			android:background="@drawable/title_bar"
  			android:gravity="center_vertical"  > 
  			<Button
            android:id="@+id/menu_btn_back"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="返回"
            android:textSize="14sp"
            android:textColor="#fff"
            android:background="@drawable/title_btn_back"
		    />    
      		<TextView
               android:id="@+id/textView_main_header"
        		android:layout_width="wrap_content" 
        		android:layout_height="wrap_content" 
        		android:text="消费记录"
        		android:layout_centerInParent="true"
        		android:textSize="20sp"		
				android:textColor="#ffffff" />     

      		<TextView
      		    android:id="@+id/textView_main_time"
      		    android:layout_width="wrap_content"
      		    android:layout_height="wrap_content"
      		    android:layout_alignBottom="@+id/textView_main_header"
      		    android:layout_alignParentRight="true"
      		    android:layout_alignTop="@+id/textView_main_header"
      		    android:layout_toRightOf="@+id/textView_main_header"
      		    android:gravity="right|bottom"
      		    android:padding="1dp"
      		    android:text=""
      		    android:textColor="#666"
      		    android:textSize="14sp" />
   
		</RelativeLayout>
    
</LinearLayout>